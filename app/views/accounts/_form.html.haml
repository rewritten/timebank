= form_for(@account) do |f|
  - if @account.errors.any?
    #error_explanation
      %h2
        = pluralize(@account.errors.count, "error")
        prohibited this account from being saved:
      %ul
        - @account.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :type
    %br/
    = f.text_field :type
  .field
    = f.label :owner_name
    %br/
    = f.text_field :owner_name
  .field
    = f.label :account_type_id
    %br/
    = f.text_field :account_type_id
  .field
    = f.label :credit_limit
    %br/
    = f.text_field :credit_limit
  .field
    = f.label :upper_credit_limit
    %br/
    = f.text_field :upper_credit_limit
  .field
    = f.label :member_id
    %br/
    = f.text_field :member_id
  .field
    = f.label :member_status
    %br/
    = f.text_field :member_status
  .actions
    = f.submit
