%p#notice= notice
%p
  %b User:
  = @account.user.email
%p
  %b Balance:
  = @account.balance
= link_to 'Edit', edit_account_path(@account)
|
\#{link_to 'Back', accounts_path}

%header
  %h3 Transactions
%table
  %thead
    %tr
      %th Date
      %th Amount
      %th From/To
  %tbody
    - (@account.transactions_from + @account.transactions_to).sort_by(&:created_at).reverse.each do |transaction|
      - is_from = transaction.source_id == @account.id
      %tr
        %td=l transaction.created_at.to_date
        %td=is_from ? -transaction.amount : transaction.amount
        %td=is_from ? transaction.destination.user.email : transaction.source.user.email

  