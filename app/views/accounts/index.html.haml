%h2 Listing accounts
%table
  %thead
    %tr
      %th User
      %th Balance
      %th
      %th
      %th
  %tbody
    - @accounts.each do |account|
      %tr
        %td= account.user_name
        %td= account.balance
        %td= link_to 'Show', account
        %td= link_to 'Edit', edit_account_path(account)
        %td= link_to 'Destroy', account, :confirm => 'Are you sure?', :method => :delete
%br/
= link_to 'New Account', new_account_path
